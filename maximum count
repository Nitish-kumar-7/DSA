class Solution {
    public int maximumCount(int[] nums) {

        int pos_count = 0 , neg_count = 0;

        int max;

        for(int i = 0; i< nums.length; i++){
            if(nums[i] > 0){
                pos_count += 1;
            }

            if( nums[i] < 0){
                neg_count += 1;
            }

           

            
        }

          return Math.max(pos_count,neg_count);

        


        
    }
}
